<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="wrap">
		<div class="login__error">
			<h3 id="error"></h3>
		</div>
		<div class="form">
			<form action="/api/v1/auth/signup" method="POST" id="login_form">
				<div>
					<input type="text" name="login" class="form__input" placeholder="Логин..."/>
				</div>
				<div>
					<input type="text" name="email" class="form__input" placeholder="e-mail..."/>
				</div>
				<div>
					<input type="password" name="password" class="form__input" placeholder="Пароль..."/>
				</div>
				<button type="submit" class="form__button">Регистрация</button>
			</form>
		</div>
	</div>

</fest:template>